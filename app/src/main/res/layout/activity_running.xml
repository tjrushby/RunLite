<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    tools:context=".views.RunActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guidelineDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineLockUnlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineSeekBarLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineSeekBarRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <!-- timer -->

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_default_time_elapsed"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_timer"
        app:layout_constraintBottom_toTopOf="@id/ivAccuracy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout" />

    <!-- gps details -->

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivAccuracy"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/guidelineDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        app:srcCompat="@drawable/ic_gps_fixed_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_space"
        android:text="@string/label_gps_status"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivAccuracy" />

    <!-- distance details -->

    <TextView
        android:id="@+id/tvDistanceHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_distance_travelled"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineDetails" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_default_distance_travelled"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_details"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDistanceHeader" />

    <TextView
        android:id="@+id/tvDistanceUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_distance_travelled_unit_km"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_details"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDistance" />

    <!-- pace details -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineCenter"
        app:layout_constraintTop_toBottomOf="@id/guidelineDetails">

        <include layout="@layout/details_avg_pace" />

    </LinearLayout>


    <!-- SeekBar -->

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivUnlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/common_google_signin_btn_text_light_disabled"
        app:layout_constraintStart_toEndOf="@id/guidelineSeekBarLeft"
        app:layout_constraintTop_toBottomOf="@id/guidelineLockUnlock"
        app:srcCompat="@drawable/ic_lock_open_24dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/common_google_signin_btn_text_light_disabled"
        app:layout_constraintEnd_toStartOf="@id/guidelineSeekBarRight"
        app:layout_constraintTop_toBottomOf="@id/guidelineLockUnlock"
        app:srcCompat="@drawable/ic_lock_outline_24dp" />

    <com.tjrushby.runlite.util.ThumbOnlySeekBar
        android:id="@+id/sbLock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_size_sub_details"
        android:max="100"
        android:maxHeight="@dimen/seek_thumb_height"
        android:minHeight="@dimen/seek_thumb_height"
        android:thumb="@drawable/seek_thumb"
        app:layout_constraintBottom_toTopOf="@id/guidelineButtons"
        app:layout_constraintEnd_toStartOf="@id/guidelineSeekBarRight"
        app:layout_constraintStart_toEndOf="@id/guidelineSeekBarLeft"
        app:layout_constraintTop_toBottomOf="@id/guidelineLockUnlock" />

    <!-- buttons -->

    <Button
        android:id="@+id/buttonStart"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/button_start"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineButtons" />

    <Button
        android:id="@+id/buttonPause"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/button_pause"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineButtons" />

    <Button
        android:id="@+id/buttonStop"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:enabled="false"
        android:text="@string/button_stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineCenter"
        app:layout_constraintTop_toBottomOf="@id/guidelineButtons" />

</android.support.constraint.ConstraintLayout>