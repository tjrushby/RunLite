<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvAveragePaceHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_average_pace"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAveragePace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_default_pace"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAveragePaceHeader" />

    <TextView
        android:id="@+id/tvPaceUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_pace_min_km"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAveragePace"/>

</android.support.constraint.ConstraintLayout>